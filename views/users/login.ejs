<% layout("layouts/boilerplate") %>

<link rel="stylesheet" href="/style/user/reg-login.css">
<link rel="stylesheet" href="/style/user/loginpage.css">

<div class="row justify-content-center pt-2">
    <div class="col d-flex justify-content-center">
        <div class="card">
            <div class="card-header text-center"><h3 class="mb-0">Enter your credentials</h3></div>
            <div class="card-body d-flex justify-content-center pt-2">
                <form action="/login" method="post" class="d-flex flex-column needs-validation" novalidate>
                    <label for="email" class="text-center">E-mail</label>
                    <input type="email" id="email" name="username" maxlength="30" required autocomplete="off" class=" form-control shadow-none">
                    <label for="password" class="text-center">Password</label>
                    <input type="password" id="password" name="password" maxlength="30" required autocomplete="off" class=" form-control shadow-none">
                    <button class="btn btn-primary mt-2">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>